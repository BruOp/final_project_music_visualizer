# A sample Gemfile
source "https://rubygems.org"

gem 'rake'
gem 'activesupport'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-activerecord'

gem 'puma'
gem 'tux'

group :production do
  gem 'pg'
end

group :development, :test do
  gem 'pry'
  gem 'shotgun'
  gem 'sqlite3'
  gem 'poltergeist'
  gem 'capybara'
  gem 'rspec'
  gem 'database_cleaner'
end
